<%= turbo_frame_tag 'rooms_controller' do %>
  <main class="flex w-full h-screen justify-center bg-teal-900">
    <%= render 'shared/nav_bar' %>

    <section class="w-5/6 flex flex-col items-center justify-center gap-5 h-screen">
      <%= turbo_stream_from @messages_channel %>
      <%= render @room %>

      <div class="w-full">
        <h4 class="text-center font-semibold text-xl">Messages</h4>
        <div class='h-96 w-full bg-white rounded-lg p-2 overflow-y-auto'>
          <%= turbo_frame_tag "room_messages_#{@room.id}" do %>
            <% @room.messages.order(:created_at).each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div>
        <h5>Create Message</h5>
        <%= form_with(model: [@room, Message.new]) do |f| %>
          <%= f.text_field :name %>
          <%= f.submit %>
        <% end %>
      </div>
    </section>
  </main>
<% end %>
