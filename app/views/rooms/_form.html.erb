<%= turbo_frame_tag 'form_room_component' do %>
  <%= form_with(model: room, class: 'flex flex-col') do |form| %>
    <% if room.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

        <ul>
          <% room.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col gap-1 justify-center">
      <%= form.label :name, class: 'text-white font-semibold' %>
      <%= form.text_field :name, class: 'w-full rounded border border-gray-200 font-semibolf text-sm' %>
    </div>

    <div class="mt-2 flex gap-2 justify-end">
      <%= form.submit class: 'p-2 text-sm text-white font-semibold bg-green-600 rounded' %>
      <%= link_to 'Cancel', :back, class: 'p-2 text-sm text-white text-center font-semibold bg-red-600 rounded' %>
    </div>
  <% end %>
<% end %>
