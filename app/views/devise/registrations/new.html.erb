<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10">

  <section class="flex flex-col items-center gap-1">
    <%= image_tag('chat.png', width: 100) %>
    <h1 class="font-bold text-4xl text-white my-4">Bienvenido - Chat App</h1>
    <p class="text-center font-semibold text-white">This is a simple Chatroom for Rails App.</p>
    <p class="text-center text-white">You will lear more about Hotwire, Turbo Streams, Turbo Frames and Stimulus JS.</p>
  </section>

  <section class="flex flex-col items-center">
    <h2 class="text-white font-bold text-2xl mb-5">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'flex flex-col') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :email, class: 'text-white font-semibold text-sm w-24' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'text-xs font-medium rounded w-full' %>
      </div>

      <div class="flex flex-col my-5 justify-cnter">
        <div class="flex gap-1 items-center w-96">
          <%= f.label :password, class: 'text-white font-semibold text-sm w-24' %>
          <%= f.password_field :password, autocomplete: "new-password", class:'text-xs font-medium rounded w-full' %>
        </div>
        <div class="flex w-full items-center justify-end">
          <% if @minimum_password_length %>
            <em class="text-sm font-semibold text-white">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>

      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password_confirmation, class: 'text-white font-semibold text-sm w-24' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'text-xs font-medium rounded w-full' %>
      </div>

      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Sign up", class: 'bg-green-800 rounded p-3 text-white font-semibold' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</main>
