<section class="flex flex-col w-full">
  <span class="text-white text-center mt-5">Usuario: <strong><%= current_user.email %></strong></span>
  <h3 class="text-xl font-bold text-white mt-5 text-center mb-2">My Rooms</h3>
  <div class="flex flex-col px-5 gap-2 w-full" id="user_<%= "#{user.id}" %>_rooms">
    <% user.rooms.all.each do |room| %>
      <%= render 'sidebar/single_room', room: room %>
    <% end %>
  </div>
</section>
