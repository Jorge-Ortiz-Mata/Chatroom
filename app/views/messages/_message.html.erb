<%= turbo_frame_tag "message_#{message.id}", class: 'bg-gray-100 px-3 py-1 my-1 flex justify-between rounded items-center gap-2' do %>
  <div class="flex gap-1">
    <span class="text-gray-600 font-semibold">
      <%= "#{message.user.email}:" %>
    </span>
    <span>
      <%= message.name %>
    </span>
  </div>

  <div class="flex gap-2">
    <%= button_to message_edit_path, class:"text-xs font-bold", params: { message: message }, method: :get do %>
      Edit
    <% end %>

    <%= button_to room_message_path(message.room, message), class:"text-xs font-bold", params: { message: message }, method: :delete do %>
      Delete
    <% end %>
  </div>
<% end %>
